{
  "productName": "FixMate AI",
  "version": "1.0.0",
  "identifier": "com.fixmate.pcdoctor",
  "build": {
    "beforeDevCommand": "pnpm dev:frontend",
    "beforeBuildCommand": "pnpm build:frontend",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../client/dist"
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/icon.png"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": ["en-US"],
        "template": null
      },
      "nsis": {
        "license": null,
        "installerIcon": "icons/icon.ico",
        "installMode": "perUser",
        "languages": ["English"],
        "displayLanguageSelector": false,
        "compression": "lzma"
      }
    }
  },
  "updater": {
    "active": true,
    "endpoints": [
      "https://github.com/YOUR_USERNAME/fixmate-ai/releases/latest/download/latest.json"
    ],
    "dialog": true,
    "pubkey": "WILL_BE_GENERATED"
  },
  "app": {
    "windows": [
      {
        "title": "FixMate AI - PC Doctor",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true,
        "minWidth": 1200,
        "minHeight": 800
      }
    ],
    "security": {
      "csp": null
    }
  }
}
