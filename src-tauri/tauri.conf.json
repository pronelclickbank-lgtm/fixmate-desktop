{
  "productName": "FixMate AI",
  "version": "1.0.0",
  "identifier": "com.fixmate.pcdoctor",
  "build": {
    "beforeDevCommand": "pnpm dev:frontend",
    "beforeBuildCommand": "pnpm build:frontend",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../client/dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perUser"
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "FixMate AI - PC Doctor",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 1200,
        "minHeight": 800
      }
    ],
    "security": {
      "csp": null
    }
  }
}
